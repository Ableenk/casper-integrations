# -----------------------------------------------------------
# Retrieve latest block.
# -----------------------------------------------------------
curl --location -g --request POST 'http://3.136.227.9:7777/rpc' \
--data-raw '{
    "id": 1,
    "jsonrpc": "2.0",
    "method": "chain_get_block"
}'

# -----------------------------------------------------------
# Retrieve by block hash.
# -----------------------------------------------------------
curl --location -g --request POST 'http://3.136.227.9:7777/rpc' \
--data-raw '{
    "id": 1,
    "jsonrpc": "2.0",
    "method": "chain_get_block",
    "params": {
        "block_identifier": {
            "Hash": "53ef11dce09c54e58d8c3b14c75c188ce9f41a543a5e547097517838862e0a06"
        }
    }
}'

# -----------------------------------------------------------
# Retrieve by block height.
# -----------------------------------------------------------
curl --location -g --request POST 'http://3.136.227.9:7777/rpc' \
--data-raw '{
    "id": 1,
    "jsonrpc": "2.0",
    "method": "chain_get_block",
    "params": {
        "block_identifier": {
            "Height": 505
        }
    }
}'
