# -----------------------------------------------------------
# Retrieve transfers of latest block.
# -----------------------------------------------------------
curl --location -g --request POST '{{N1_ADDRESS_RPC}}' \
--data-raw '{
    "id": 1,
    "jsonrpc": "2.0",
    "method": "chain_get_block_transfers"
}'

# -----------------------------------------------------------
# Retrieve transfers by block height.
# -----------------------------------------------------------
curl --location -g --request POST '{{N1_ADDRESS_RPC}}' \
--data-raw '{
    "id": 1,
    "jsonrpc": "2.0",
    "method": "chain_get_block_transfers",
    "params": {
        "block_identifier": {
            "Hash": "e2800c21cb3c93b8e82fd348e044456f326bfbfce140bc00581800cce8a18fd4"
        }
    }
}'

